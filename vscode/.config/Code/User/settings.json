{
  // vscode
  // arduino
  // babel javascript
  // better toml
  // c / c++
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
  // color picker
  // debugger for chrome
  // docker
  // editorconfig for vscode
  // eslint
  // go
  // gulp snippets
  // html css support
  // intellisense for css classnames in
  // kubernetes
  // language-postcss
  // live server
  // markdown lint
  // markdown icon theme
  // mithril emmet
  // nord
  // npm
  // npm intellisense
  // prettier - code formatter
  // python
  // sql server (mssql)
  // sveltes
  // terraform
  // vueter
  // yaml
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "explorer.autoReveal": false,
  "workbench.colorTheme": "Nord",
  "window.zoomLevel": -1,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "editor.renderWhitespace": "none",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.activityBar.visible": true,
  "files.autoSave": "onFocusChange",
  "json.format.enable": false,
  //
  // here is some sort of comment,
  //
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.cursorSurroundingLines": 3,
  "editor.cursorWidth": 3,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.find.autoFindInSelection": "multiline",
  "editor.fontFamily": "'Fira Sans Mono', 'monospace'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "diffEditor.maxComputationTime": 6000,
  "editor.minimap.maxColumn": 50,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.side": "left",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggest.maxVisibleSuggestions": 10,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "files.associations": {
    "*.css": "postcss",
    ".vuerc": "json"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false
  },
  "files.simpleDialog.enable": true,
  "files.watcherExclude": {
    "**/bower_components/**": true
  },
  "workbench.commandPalette.history": 5,
  "workbench.enableExperiments": false
}
