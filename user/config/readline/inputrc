# $include /etc/inputrc

set bell-style none
set bind-tty-special-chars on # default
set blink-matching-paren off # default
set colored-completion-prefix on
set colored-stats on
set completion-ignore-case on
set completion-map-case on
set completion-prefix-display-length 12
set completion-query-items 70
set convert-meta off
set echo-control-characters off
set input-meta on
set mark-symlinked-directories on
set match-hidden-files off
set revert-all-at-newline on
set show-all-if-ambiguous on
set show-all-if-unmodified on
set skip-completed-text on
set output-meta on
set visible-stats on

#"\e[A": history-search-backward
#"\e[B": history-search-forward
#"\e[C": forward-char
#"\e[D": backward-char
#"^[[1;2C": forward-word
#"^[[1;2D": backward-word

"\C-xr": re-read-init-file
"\C-xp": previous-screen-line
"\C-xn": next-screen-line
"\C-xw": redraw-current-line
"\C-xr": reverse-search-history
"\C-xs": forward-search-history
"\C-xp": print-last-kbd-macro

$if Bash
        Space: magic-space
$endif
