source ~/config/vim/autoload/plug.vim
source ~/config/vim/plugins.vim
set nocompatible

set autoindent
set autoread
set autowrite
set background=dark
set backspace=indent,eol,start
set backup
set backupdir=~/data/vim/backup
set belloff=all
set nobomb
set cmdheight=1
set confirm
set directory=~/data/vim/swap
set encoding=utf8
set noerrorbells
set expandtab
set fileformats=unix,dos,mac
set hidden
set history=10000
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set magic
set matchtime=2
set modeline
"set modifiable
set mouse=a
set number
set relativenumber
set ruler
set scrolloff=1
set shiftwidth=8
set showcmd
set showmatch
set sidescrolloff=5
set showmatch
set smartcase
set smartindent
set smarttab
set suffixes+=.bak,~,.swp,.o,.info,.aux,.log,.dvi,.bbl,.blg,.brf,.cb,.ind,.idx,.ilg,.inx,.out,.toc
set t_vb= "no sound on errors
set tabpagemax=50
set tabstop=8
set timeoutlen=500
set title
set ttyfast
set undodir=~/data/vim/undo
set viminfo+=n~/data/vim/viminfo
set novisualbell
set wildignore+=*.o,*~,*.pyc
set wildmenu
set wrap

filetype plugin on
filetype indent on

syntax enable

" better way to move between windows
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

"nmap <C-n> PlugInstall

command! W execute 'w !sudo tee % > /dev/null' <bar> edit!


" Visual mode pressing * or # searches for the current selection
" Super useful! From an idea by Michael Naumann
vnoremap <silent> * :<C-u>call VisualSelection('', '')<CR>/<C-R>=@/<CR><CR>
vnoremap <silent> # :<C-u>call VisualSelection('', '')<CR>?<C-R>=@/<CR><CR>


au FocusGained,BufEnter * checktime

"jump to last position when reopening file
au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif


