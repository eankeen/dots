super + Return
	choose launch terminal-emulator

super + i
	rofi -show combi -combi-modi window -show-icons

super + o
	rofi -show combi -combi-modi drun,run -show-icons

super + p
	rofi -show combi -combi-modi run -show-icons

super + u
	cactus

Print
	maim | xclip -t image/png -selection clipboard

shift + Print
	maim -s | xclip -t image/png -selection clipboard

shift + super + Print
	maim -s ~/Pics/screenshot.png

# requires alsa-utils
XF86Audio{Mute,RaiseVolume,LowerVolume}
	amixer -q set Master {toggle,5%+,5%-}
# pulseaudio-ctl {mute,up,down}

XF86AudioPrev
	cmus-remote --prev

XF86AudioPause
	cmus-remote --pause

XF86AudioNext
	cmus-remote --next

XF86AudioMute
	pactl set-sink-mute 1 toggle && killall -SIGUSR1 i3status

XF86AudioLowerVolume
	pactl set-sink-volume 1 -10% && killall -SIGUSR1 i3status

XF86AudioRaiseVolume
	pactl set-sink-volume 1 +10% && killall -SIGUSR1 i3status

