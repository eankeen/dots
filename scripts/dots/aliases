## aliases ##
alias cp="cp -i"
alias df="df -h"
alias free="free -m" 

# buku (github.com/jarun/buku)
alias b="bukdu --suggest"

# irssi (github.com/irssi/irssi)
# shellcheck disable=SC2139
alias irssi="irssi --config \"$XDG_CONFIG_HOME/irssi\""

# code (github.com/microsoft/vscode)
# shellcheck disable=SC2139
alias code="code --user-data-dir \"$XDG_DATA_HOME/vscode\" --extensions-dir \"$XDG_DATA_HOME/vscode/extensions\""
