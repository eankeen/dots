[core]
	warnAmbiguousRefs = true ; default
	compression = 2
	editor = vim
	# pager = less -+F -+R -S -+X
	pager = less -FR
	[init]
	defaultBranch = main
[add "interactive"]
	useBuiltIn = true ; EXPERIMENTAL
[alias]
	s = status
[blame]
	coloring = highlightRecent
	date = relative
[branch]
	autoSetupMerge = true
[checkout]
	defaultRemote = origin
[clean]
	requireForce = true ; default
[color "blame"]
	highlightRecent = magenta,2 year ago,red,12 month ago,yellow,6 month ago,green,1 month ago,cyan
[color]
	pager = true ; default
[color "push"]
	error = magenta
[color "transport"]
	rejected = magenta
[color]
	ui = auto ; default
[commit]
	gpgSign = true
	template = ~/.config/git/commit-template
[diff]
	algorithm = myers ; default
[diff "pandoc2md"]
	textconv = pandoc --to=markdown
[diff "pdfconf"]
	textconv = pdftohtml -stdout
[diff "wrap"]
	textconv = fmt
[diff "exif"]
	textconv = exiftool
[diff "mp3"]
	textconv = mp3info -x
[diff "xlsconf"]
	textconv = xls2csv
[diff "zipshow"]
	textconv = unzip -c -a
[diff "unzip -l"]
	textconv = unzip -l
[gpg]
	program = gpg ; default
	format = openpgp ; default
[help]
	autoCorrect = 10
[merge]
	ff = true ; default
# [pkg: npm-merge-driver] TODO
[merge "npm-merge-driver"]
	name = Merges npm lockfiles
	driver = pnpx --no-install npm-merge-driver merge %A %O %B %P
[merge "yarn-merge-driver"]
	name = Merges Yarn lockfiles
	driver = pnpx --no-install npm-merge-driver merge %A %O %B %P -c yarn
[pull]
	ff = true ; default
	rebase = false
[push]
	default = simple ; default
	followTags = true
[rerere]
	enabled = true
[status]
	showStash = true
	showUntrackedFiles = all
[tag]
	forceSignAnnotated = true
	gpgSign = true
