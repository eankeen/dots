bar {
  output $disp1
  position top
  workspace_buttons no
  tray_output none
  i3bar_command i3bar -t
  status_command i3blocks -c "$conf/settings/i3blocks.top.left.conf"
  height 25
  colors {
    background #002b36
    statusline #aea79f
    separator #586e75
    focused_workspace #586e75 #586e75 #ffffff #FFFFFF
    active_workspace #073642 #073642 #ffffff #FFFFFF
    inactive_workspace #002b36 #002b36 #aea79f #888888
    urgent_workspace #77216f #77216f #ffffff #FFFFFF
  }
}

# start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position bottom
  # mode hide
  # hidden_state hide
  # modifier $mod
  status_command i3status
  font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
  font pango:Terminus 16px
  separator_symbol " | "
  workspace_buttons yes
  workspace_min_width 20
  binding_mode_indicator yes
  colors {
    separator #586e75
    background #002b36
    statusline #aea79f
    focused_workspace #586e75 #586e75 #ffffff #FFFFFF
    active_workspace #073642 #073642 #ffffff #FFFFFF
    inactive_workspace #002b36 #002b36 #aea79f #888888
    urgent_workspace #77216f #77216f #ffffff #FFFFFF
  }
}

