#exec --no-startup-id blueman-applet &

bar {
  output $disp1
  position top
  workspace_buttons no
  tray_output none
  i3bar_command i3bar -t
  status_command i3blocks -c "$conf/settings/i3blocks.top.left.conf"
  height 25
  colors {
    background #00000088
    statusline #ffffffff
  }
}

# start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position bottom
  mode hide
  hidden_state hide
  modifier $mod
  status_command i3status
  font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
  font pango:Terminus 16px
  separator_symbol " | "
  workspace_buttons yes
  workspace_min_width 20
  binding_mode_indicator yes
  colors {
    separator #666666
    background #222222
    statusline #dddddd
    focused_workspace #0088CC #0088CC #ffffff #ffffff
    active_workspace #333333 #333333 #ffffff #ffffff
    inactive_workspace #333333 #333333 #888888 #888888
    urgent_workspace #2f343a #900000 #ffffff #ffffff
  }
}

client.focused #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused #333333 #333333 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000
